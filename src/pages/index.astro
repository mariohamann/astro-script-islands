---
import ScriptIsland from "../integrations/script-island/ScriptIsland.si"
---

<html>
  <head>
    <title>Script Island Test</title>
  </head>
  <body>
    <h1>Test</h1>

    <div class="box" style="width: 100px; height: 100px; background: red;">
    </div>
    <div class="box2" style="width: 100px; height: 100px; background: green;">
    </div>
    <ScriptIsland client:visible client:idle={{ timeout: 1000 }}>
      <script is:inline>
        import gsap from "gsap"
        gsap.to(".box", { rotation: 360, duration: 2 })
        console.log("with import")
      </script>
    </ScriptIsland>
    <ScriptIsland client:visible client:idle={{ timeout: 3000 }}>
      <script is:inline>
        import gsap from "gsap"
        gsap.to(".box2", { rotation: 360, duration: 2 })
        console.log("with import")
      </script>
    </ScriptIsland>
    <ScriptIsland client:idle={{ timeout: 2000 }}>
      <script is:inline>
        console.log("tiny")
      </script>
    </ScriptIsland>
    <ScriptIsland client:idle={{ timeout: 2000 }}>
      <script is:inline>
        import "../lib/test.js"
      </script>
    </ScriptIsland>
    <script>
      console.log("normal script that should be inlined")
    </script>
  </body>
</html>
